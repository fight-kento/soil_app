<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form_with(url: posts_new_path, local: true) do |form| %>
            <div class="titles">
              <p>タイトル</p>
              <%= form.text_field :titles %>        
            </div>
            <div class="content">
              <p>本文</p>
              <%= form.rich_text_area :content , value: @post.content, class: "custom-text" %>
            </div>
          <% end %>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>