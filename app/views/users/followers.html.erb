
<div class="main users-follow">
    <div class="container">
        <div class="row justify-content-center">
            <h1>FOLLOWERS</h1>
            <table class="table text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                <td>
                    <%= link_to user_path(user) do %>
                        <%= user.name %>
                    <% end %>
                </td>
                <td>
                    <% if user = @current_user %>
                        <% if user.is_followed_by?(@current_user) %>
                            <%= link_to user_relationships_path(user), method: :delete, class: "btn btn-danger" do %>
                                フォロー解除
                            <% end %>
                        <% else %>
                            <%= link_to user_relationships_path(user), method: :post, class: "btn btn-primary" do %>
                                フォロー
                            <% end %>
                        <% end %>
                    <% end %>
                </td>
                </tr>
            <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>